---
pod:
  replicas:
    server: {{ pod.replicas }}
network:
  node_port:
    enabled: true
    port: 31000
  api:
    ingress:
      annotations:
        nginx.ingress.kubernetes.io/proxy-body-size: 102400M
endpoints:
  identity:
    name: keystone
    auth:
      admin:
        username: admin
        password: {{ os_admin_password }}
    port:
      api:
        default: 8080
        public: 8080
  dashboard:
    port:
      web:
        public: 8080
  oslo_db:
    auth:
      admin:
        username: root
        password: {{ mariadb.admin_password }}
      horizon:
        username: horizon
        password: {{ horizon.password }}
conf:
  horizon:
    local_settings:
      config:
        timezone: "{{ horizon.timezone }}"
...
