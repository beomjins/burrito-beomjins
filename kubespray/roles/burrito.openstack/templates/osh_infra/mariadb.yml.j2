---
images:
  pull_policy: IfNotPresent
  tags:
    mariadb: {{ containerd_insecure_registries.local_registry }}/jijisa/mariadb-server:10.6.10
    ingress: {{ containerd_insecure_registries.local_registry }}/ingress-nginx/controller:v1.1.3
    error_pages: {{ containerd_insecure_registries.local_registry }}/defaultbackend:1.4
    prometheus_create_mysql_user: {{ containerd_insecure_registries.local_registry }}/jijisa/mariadb:10.6.10
    dep_check: {{ containerd_insecure_registries.local_registry }}/airshipit/kubernetes-entrypoint:v1.0.0

pod:
  replicas:
    server: {{ pod.replicas }}
    ingress: {{ pod.replicas }}
  security_context:
    server:
      container:
        perms:
          readOnlyRootFilesystem: false
        mariadb:
          runAsUser: 0
          allowPrivilegeEscalation: true
          readOnlyRootFilesystem: false
volume:
  enabled: true
  class_name: {{ storageclass_name }}
  size: {{ mariadb.volume_size }}
  log:
    class_name: {{ storageclass_name }}
    size: 5Gi
endpoints:
  oslo_db:
    host_fqdn_override:
      default:
        tls:
          secretName: mariadb-tls-direct
          duration: {{ tls.duration }}
          renewBefore: {{ tls.renewBefore }}
          issuerRef:
            name: ca-issuer
            kind: ClusterIssuer
    auth:
      admin:
        username: root
        password: {{ mariadb.admin_password }}
monitoring:
  prometheus:
    enabled: false
    mysqld_exporter:
      scrape: false
conf:
  db_acl:
    enabled: true
    cidr: {{ kube_pods_subnet }}
manifests:
  certificates: true
...
