#jinja2: lstrip_blocks: "True"
global
    log         127.0.0.1 local2
    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    maxconn     60000
    user        haproxy
    group       haproxy
    daemon

    # turn on stats unix socket
    stats socket /var/lib/haproxy/stats

defaults
    mode                    http
    log                     global
    option                  httplog
    option                  dontlognull
    option                  http-server-close
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          1m
    timeout server          1m
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 3000

listen ceph-rgw-public
    bind {{ keepalived_vip_svc | ternary(keepalived_vip_svc, keepalived_vip) }}:{{ ceph_rgw_port }}
    option forwardfor except 127.0.0.0/8
    balance {{ balance }}
    option httpchk GET /
    {% for h in groups['ceph_rgw'] %}
    server {{ h }} {{ hostvars[h].radosgw_address }}:{{ ceph_rgw_port }} check inter {{ inter }} rise {{ rise }} fall {{ fall }} on-marked-down shutdown-sessions
    {% endfor %}

